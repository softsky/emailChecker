{
    "rules": {
        "no-console": false,
        "semicolon": [
            true,
            "never"
        ],
        "prettier": true
    },
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier",
        "tslint-plugin-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "wallaby.js",
            "webpack.config.js"
        ]
    }
}
